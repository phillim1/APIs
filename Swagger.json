{
  "openapi": "3.0.1",
  "info": {
    "title": "Loan Status Events",
    "description": "This API supports the status of activities revolving around the loan origination process to be displayed to the borrower outside of Fusion Mortgagebot.",
    "version": "1.0.0",
    "x-finastra-channel-type": "B2B",
    "x-finastra-short-description": "Loan Status Events"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/status-changed": {
      "post": {
        "summary": "Notification of an action that has changed the status on the account",
        "description": "Notification of an action that has changed the status on the account",
        "operationId": "Status-status-changed-Event",
        "requestBody": {
          "description": "This contains the event details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StatusEvents"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "No content",
            "content": {}
          }
        },
        "x-codegen-request-body-name": "event"
      }
    }
  },
  "components": {
    "schemas": {
      "StatusEvents": {
        "title": "Status Event",
        "type": "object",
        "properties": {
          "tenant": {
            "maxLength": 255,
            "type": "string",
            "description": "Identifier of the tenant",
            "example": "ABCBank"
          },
          "eventId": {
            "type": "string",
            "description": "Returns a globally unique identifier for the event.",
            "format": "uuid",
            "example": "6e924284-3b85-4591-9868-dd5cde5cddc0"
          },
          "timestamp": {
            "type": "string",
            "description": "ISO-8601 format. Specifies the date and time when the notification was issued",
            "format": "date-time"
          },
          "applicationId": {
            "type": "string",
            "description": "Returns a globally unique identifier for the application.",
            "format": "uuid",
            "example": "fa2f5e24-cc89-467e-989c-67fac5cf042e"
          },
          "eventType": {
            "type": "string",
            "description": "Specifies the type of status change.",
            "enum": [
              "AccountOpened",
              "ValidationQuestionsReady",
              "ValidationQuestionsReviewed",
              "StatusChanged"
            ]
          },
          "url": {
            "maxLength": 300,
            "type": "string",
            "description": "Specifies the endpoint where status change details can be reviewed",
            "example": "/application/fa2f5e24-cc89-467e-989c-67fac5cf042e/status"
          },
          "application-url": {
            "maxLength": 300,
            "type": "string",
            "description": "Specifies the endpoint to the application detauls can be reviewed",
            "example": "/application/fa2f5e24-cc89-467e-989c-67fac5cf042e"
          }
        },
        "description": "Event"
      }
    }
  }
}
